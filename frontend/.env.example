# API Configuration
VITE_API_BASE_URL=http://localhost:3004/api
VITE_API_TIMEOUT=30000

# Authentication
VITE_AUTH_STORAGE_KEY=erp_auth_token
VITE_AUTH_REFRESH_INTERVAL=300000

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_ANIMATIONS=true
VITE_MAP_PROVIDER=google
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Chart Refresh Intervals (milliseconds)
VITE_REVENUE_CHART_REFRESH=300000
VITE_PERFORMANCE_CHART_REFRESH=60000
VITE_ROUTE_CHART_REFRESH=120000

# Cache Configuration
VITE_ENABLE_ROUTE_CACHING=true
VITE_CACHE_DURATION=3600000

# Development Settings
VITE_DEV_SERVER_PORT=8080
VITE_ENABLE_DEBUG_LOGGING=true
